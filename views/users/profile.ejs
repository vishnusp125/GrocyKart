  <div class="page-content page-container m-3 p-3" id="page-content">
    <div class="padding p-3 m-3 mt-3">
        <div class="row container d-flex justify-content-center">
          <h1 class="d-flex justify-content-center p-3">My Profile</h1>
          <div class="d-flex justify-content-end">
            <a href="/userProfileEdit" class="btn btn-success m-3">Edit Profile</a>
            <a href="/addAddress" class="btn btn-primary m-3">Add Address</a>
            <a href="/orderDetails" class="btn btn-warning m-3">My Orders</a>
          </div>                      
            <div class="col-xl-12 col-md-12">
                <div class="card user-card-full">
                    <div class="row m-l-0 m-r-0">
                        <div class="col-sm-4 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <div class="m-b-25">
                                    <img src="https://sialifehospital.com/wp-content/uploads/2021/04/testimonial-1.png" class="img-radius"
                                         style="width:150px;" height="150px" alt="User-Profile-Image">
                                </div>
                                <h6 class="f-w-600">
                                    <%= profile.username %>
                                </h6>
                                <p></p>
                                <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-block">
                                <!-- <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Information</h6> -->
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 " style="color:crimson;font-weight: 700;">Username</p>
                                        <h6 class="text f-w-300">
                                            <%= profile.username %>
                                        </h6>
                                    </div>
                                    <!-- <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Last name</p>
                                        <h6 class="text f-w-400">
                                            <%= profile.lname %>
                                        </h6>
                                    </div> -->
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600" style="color:crimson;font-weight: 700;">Email</p>
                                        <h6 class="text f-w-400">
                                            <%= profile.email %>
                                        </h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600" style="color:crimson;font-weight: 700;">Phone</p>
                                        <h6 class="text f-w-400">
                                            <%= profile.phoneNo %>
                                        </h6>
                                    </div>
                                    <% for(i=0; i<profile.address.length; i++) { %>
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600" style="color:crimson;font-weight: 700;">Address <%= i+1 %></p>                                  
                                          <h6 class="text f-w-400"><%= profile.address[i].address %></h6>
                                          <h6 class="text f-w-400"><%= profile.address[i].city %></h6>
                                          <h6 class="text f-w-400"><%= profile.address[i].state%></h6>
                                            <h6 class="text f-w-400"><%= profile.address[i].country%></h6>
                                            <h6 class="text f-w-400"><%= profile.address[i].zip%></h6>
                                            <a href="/addressEdit/<%=profile.address[i]._id%>"><i class="bi bi-pencil-square m-2" style="color: green;"></i></a>
                                            <a id="href" href="/addressDelete/<%=profile.address[i]._id%>" onclick="confirmation(event)" ><i class="bi bi-trash" style="color: red;"></i></a>
                                          </div>   
                                          <% } %>
                                    <!-- <% if(!profile) { %>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Address</p>
                                        <h6 class="text-muted f-w-400">
                                            <%= profile.address[0].address %>
                                        </h6>
                                    </div>
                                   
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Zipcode</p>
                                        <h6 class="text-muted f-w-400">
                                            <%= profile.address[0].zip %>
                                        </h6>
                                    </div>
                                    <% }else{ %>
                                        <% } %> -->
                                        <div>
                                 
                                </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

