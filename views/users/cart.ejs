						<tbody>
							<% user.forEach(function(user,index) { %>
						<tr class="rem1"> 
							<td class="invert"><%= index+1 %></td>
							<td class="invert-image"><a href="/singleProduct?id=<%=user._id%>"><img src="./image/<%=user._id %>.jpeg" style="object-fit: contain;" width="300px" height="80px"  alt=" " ></a></td>
							<td class="invert">
								 <div class="quantity"> 
									<div class="quantity-select">                           
										<a href="/removeFromcart/<%=user._id%>"><div class="entry value-minus">&nbsp;</div></a>
										<div class="entry value"><span><%=user.count%></span></div>
										<a href="/addtoCart/<%=user._id%>"><div class="entry value-plus active">&nbsp;</div></a>
									</div>
								</div>
							</td>
							<td class="invert"><%=user.name %></td>
							
							<td class="invert">&#x20B9; <%= (user.discountedPrice * user.count) %></td>
									
							<td class="invert">
								
							
							
								<button class="confirm_del_btn btn btn-danger" value="/<%=user._id %>">Delete</button>

								
							
							</td>
							
					<% }) %>
					
					</tbody></table>
				</div>
				
				
				<div class="checkout-left">	
					<div class="col-md-4 checkout-left-basket">
						<h4>Items in basket</h4>
						<ul>
							<% user.forEach(function(user,index) { %>
							<li>Product <%= index+1 %> <i>-</i> <span> &#x20B9; <%= (user.discountedPrice * user.count) %></span></li>
						
							<% }) %>
							<li>Total <i>-</i> <span>&#x20B9; <%=totals%></span></li>
						</ul>
					</div>
				
					<div class="col-md-8 address_form_agile">
					
										<div class="checkout-right-basket">
								<a href="/checkout">Checkout <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span></a>
						  </div>
						</div>
				
					<div class="clearfix"> </div>
					
				</div>
				<% } %>
	
			</div>
