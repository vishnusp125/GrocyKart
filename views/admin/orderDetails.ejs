

<body>
    <div >
        <div style="margin-left:350px; margin-top: 50px;">
            <h1 >Order Details</h1>

        </div>
      
      <div class="row" style="margin-top: 150px;">
        <table id="example" class="display nowrap" style="width:100%">
          <thead>
            <tr>
              <th>Product Name</th>
              <!-- <th>Quantity</th> -->
              <th>Order Status</th>
              <th>Time and Date</th>
              <!-- <th>Price</th> -->
              <th>Payment Mode</th>
              <th>Total</th>
              <th>Status</th>
              <th>Update status</th>
       
            </tr>
          </thead>
          <tbody>	
            <% orders.forEach(function(orders) { %>
            <tr>
              <td><%=orders.name%></td>
              <!-- <td><%=orders.count%></td> -->
              <td><%=orders.orderStatus%></td>
              <td><%=orders.createdAt.toLocaleString()%></td>
              <!-- <td><%=orders.price%></td> -->
              <td><%=orders.paymentOption%></td>
             
              <td><%=(orders.discountedPrice * orders.count)%></td>
              <td>
                <form action="/adminStatus/<%=orders.unique%>" method="post">
                <select class="form-select" name="status" id="status" aria-label="Default select example"> 
                <option selected></option>
                <option value="Delivered">Delivered</option>
                <option value="Dispatched">Dispatched</option>
                <option value="Cancelled">Cancel</option>
              </td>
              <td>
                <button type="submit" class="btn btn-success">Update</button>
              </td>
            </form>
            
